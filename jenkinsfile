pipeline {
    agent { label "${AGENT}"}

    stages {
        stage('CI') {
            steps {
                git branch: 'main', url: 'https://github.com/Madboy229/next_CICDCD.git'
                sh 'npm install'
                 }
            }
        stage('Build') {
            steps{
                sh "docker build . -t ${DOCKERHUB_USERNAME}/next"
                sh "docker login -u ${DOCKERHUB_USERNAME} -p ${DOCKER_PASSWORD}" // Cr√©er un PAT sur Docker Hub : https://app.docker.com/settings/personal-access-tokens
                sh "docker push ${DOCKERHUB_USERNAME}/html_cicdcd"
            }
        }
    }
}
